<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--密码输入框-->
    <declare-styleable name="PswText">
        <!--密码长度-->
        <attr name="pswLength" format="integer"/>
        <!--密码框颜色-->
        <attr name="borderColor" format="color"/>
        <!--密码颜色-->
        <attr name="pswColor" format="color"/>
        <!--输入时密码框颜色-->
        <attr name="inputBorder_color" format="color"/>
        <!--输入时密码框阴影颜色-->
        <attr name="borderShadow_color" format="color"/>
        <!--明文密码文字大小-->
        <attr name="psw_textSize" format="dimension"/>
        <!--密码框圆角程度-->
        <attr name="borderRadius" format="dimension"/>
        <!--是否使用图片绘制密码框-->
        <attr name="isDrawBorderImg" format="boolean"/>
        <!--按back键时，是否需要绘制明文密码-->
        <attr name="isShowTextPsw" format="boolean"/>
        <!--输入密码时密码框是否有阴影-->
        <attr name="isShowBorderShadow" format="boolean"/>
        <!--密码框图片-->
        <attr name="borderImg" format="reference"/>
        <!--输入时变化的密码框图片-->
        <attr name="inputBorderImg" format="reference"/>
        <!--延迟绘制密码圆点的时间,1000 = 1s-->
        <attr name="delayTime" format="integer"/>
        <!--是否只绘制明文密码-->
        <attr name="clearTextPsw" format="boolean"/>
        <!--是否只绘制圆点-->
        <attr name="darkPsw" format="boolean"/>
    </declare-styleable>

    <!--仿天气走势图-->
    <declare-styleable name="MiuiWeatherView">
        <attr name="line_interval" format="dimension"/>
        <attr name="min_point_height" format="dimension"/>
        <attr name="background_color" format="color"/>
    </declare-styleable>

    <!--多功能自动流式布局 -->
    <declare-styleable name="AutoFlowLayout">
        <!--标签布局属性      是否单行显示-->
        <attr name="singleLine" format="boolean"/>
        <!--多行显示-->
        <attr name="maxLines" format="integer"/>
        <!--是否居中显示-->
        <attr name="lineCenter" format="boolean"/>

        <!--是否支持多选       共有属性-->
        <attr name="multiChecked" format="boolean"/>

        <!--网格布局     水平间距-->
        <attr name="horizontalSpace" format="dimension"/>
        <!--垂直间距-->
        <attr name="verticalSpace" format="dimension"/>
        <!--列数-->
        <attr name="columnNumbers" format="integer"/>
        <!--行数-->
        <attr name="rowNumbers" format="integer"/>
        <!--分割线宽度-->
        <attr name="cutLineWidth" format="dimension"/>
        <!--分割线颜色-->
        <attr name="cutLineColor" format="color"/>
        <!--是否支持分割线-->
        <attr name="cutLine" format="boolean"/>

    </declare-styleable>

    <!--轮播图-->
    <declare-styleable name="BannerLayout">
        <!--轮播图点的大小-->
        <attr name="bannerPointSize" format="dimension" />
        <!--轮播图点的位置，分别有左中右-->
        <attr name="bannerPointGravity" format="enum">
            <enum name="left" value="3" />
            <enum name="center" value="17" />
            <enum name="right" value="5" />
        </attr>
        <!--轮播图点选中的图片-->
        <attr name="bannerPointDrawableSelected" format="reference" />
        <!--轮播图点未选中的图片-->
        <attr name="bannerPointDrawableUnselected" format="reference" />
        <!--轮播图循环时间，单位秒-->
        <attr name="bannerDelaySecond" format="integer" />
    </declare-styleable>

    <!--自带边框图形自定义view-->
    <declare-styleable name="SuperShapeView">

        <attr name="super_cornerRadius" format="dimension"/>
        <attr name="super_strokeWidth" format="dimension"/>

        <attr name="super_strokeColor" format="color|reference"/>
        <attr name="super_solidColor" format="color|reference"/>

        <attr name="super_dashWidth" format="dimension"/>
        <attr name="super_dashGap" format="dimension"/>

        <attr name="super_topLeftRadius" format="dimension"/>
        <attr name="super_topRightRadius" format="dimension"/>
        <attr name="super_bottomLeftRadius" format="dimension"/>
        <attr name="super_bottomRightRadius" format="dimension"/>

    </declare-styleable>

    <!--自定义多选按钮-->
    <declare-styleable name="SwitchMultiButton">

        <attr name="strokeRadius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="selectedTab" format="integer"/>
        <attr name="selectedColor" format="color|reference"/>
        <attr name="switchTabs" format="reference"/>

    </declare-styleable>

    <!--自定义 对勾动画-->
    <declare-styleable name="TickView">
        <!--没有选中的基调颜色-->
        <attr name="uncheck_base_color" format="color" />
        <!--选中后的基调颜色-->
        <attr name="check_base_color" format="color" />
        <!--选中后钩的颜色-->
        <attr name="check_tick_color" format="color" />
        <!--圆的半径-->
        <attr name="radius" format="dimension" />
        <!--动画执行的速度-->
        <attr name="rate">
            <enum name="slow" value="0"/>
            <enum name="normal" value="1"/>
            <enum name="fast" value="2"/>
        </attr>
        <attr name="clickable" format="boolean"/>
    </declare-styleable>

</resources>